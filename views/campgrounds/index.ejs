<% include ../partials/header %>


     <header class="jumbotron">
         <div class="container">
             <h1 style="font-size:100px;">CaRG!</h1>
             <p style="color:black;font-weight:bold;">Super Cars across the world at one place. </p>
            <p id="pol"><i class="facebook square icon"></i><i class="instagram icon"></i><i class="google plus square icon"></i><i class="linkedin square icon"></i><i class="twitter icon"></i></p>
         </div>
     </header>
     <hr>
     <div class="container">

     <h2 style="font-size:40px;color:#696b6d;">Top In Sports:</h2>

     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= campground.image %>">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
    <h2>more cars coming soon..</h2>
</div>



<% include ../partials/footer %>
